<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.myservice.dao.BoardDao">
    <select id="selectAll" parameterType="com.example.myservice.model.Board"
            resultType="com.example.myservice.model.Board">
        SELECT
            IDX ,
            TITLE ,
            CONTENT ,
            WRITER ,
            VIEW_CNT ,
            NOTICE_YN ,
            SECRET_YN ,
            DELETE_YN ,
            INSERT_TIME ,
            UPDATE_TIME ,
            DELETE_TIME
        FROM TB_BOARD
    </select>

    <insert id="insert" parameterType="com.example.myservice.model.Board">
        <selectKey keyProperty="idx" resultType="int" order="BEFORE">
            SELECT SQ_DEPT2.NEXTVAL FROM DUAL
        </selectKey>

        INSERT INTO TB_BOARD(
                    IDX,
                    TITLE,
                    CONTENT,
                    WRITER,
                    VIEW_CNT,
                    NOTICE_YN,
                    SECRET_YN,
                    DELETE_YN,
                    INSERT_TIME,
                    UPDATE_TIME,
                    DELETE_TIME
        ) VALUES(
                    #{idx},
                    #{title},
                    #{content},
                    #{writer},
                    #{viewCnt},
                    #{noticeYn},
                    #{secretYn},
                    #{deleteYn},
                    #{insertTime},
                    #{updateTime},
                    #{deleteTime}
        )
    </insert>
</mapper>











